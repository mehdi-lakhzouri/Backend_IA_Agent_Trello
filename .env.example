# Variables d'environnement pour l'application IA
# Copiez ce fichier vers .env et remplissez les valeurs

# Configuration Flask
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Configuration API Gemini
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# Configuration ChromaDB
CHROMA_DB_PATH=./instance/chromadb
CHROMA_COLLECTION_NAME=documents

# Configuration des fichiers
UPLOAD_FOLDER=./instance/uploaded_files
MAX_CONTENT_LENGTH=16777216  # 16MB en bytes
ALLOWED_EXTENSIONS=pdf,docx,txt,md

# Configuration serveur
PORT=5000
HOST=0.0.0.0

# Configuration cryptographie pour les tokens
CRYPTO_SECRET_KEY=your-super-secret-crypto-key-change-in-production
